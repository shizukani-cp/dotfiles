#! /usr/bin/bash

export ZSH="$HOME/.oh-my-zsh"
plugins=(git gh rust uv zsh-autosuggestions zsh-syntax-highlighting)

source $ZSH/oh-my-zsh.sh

eval "$(oh-my-posh init zsh --config ~/.poshthemes/my-theme.omp.json)"

alias rm='gio trash'
alias tree='tree --gitignore'
alias bat='batcat'
alias tetris=/snap/bin/tetris-thefenriswolf.tetris
export LANG=ja_JP.UTF-8
export LESSCHARSET=utf-8
export EDITOR=/snap/bin/nvim
export PROJECTS_DIR="$HOME/workspace"
alias prjs="ls $PROJECTS_DIR"

