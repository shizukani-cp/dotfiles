#! /usr/bin/bash

eval "$(oh-my-posh init bash --config ~/.poshthemes/my-theme.omp.json)"

alias rm='mv -i -f --backup=numbered --target-directory ~/.Trash'
alias tree='tree --gitignore'
export LANG=ja_JP.UTF-8
export LESSCHARSET=utf-8
export EDITOR=/snap/bin/nvim
alias tetris=/snap/bin/tetris-thefenriswolf.tetris

prj() {
  if [ -d "./.venv" ]; then
    deactivate
  fi
  cd "$HOME/workspace/$1"
  if [ -d "./.venv" ]; then
    source ./.venv/bin/activate
  fi
}

clean_trash() {
  \rm -rf ~/.Trash/
  mkdir ~/.Trash/
}

diary() {
    original_dir="$(pwd)"
    cd $HOME/.diary/

    case "$1" in
        pull)
            git pull
            ;;
        push)
            git push
            ;;
        *)
            if [[ $1 =~ ^[0-9]{8}$ ]]; then
                datekey=$1
                year=${datekey:0:4}
                month=${datekey:4:2}
                day=${datekey:6:2}

                dir="$year/$month"
                mkdir -p -- "$dir"

                mdfile="$dir/$day.md"
                eval "$EDITOR $mdfile"

                git add "$mdfile"
                git commit -m "$1"
            else
                echo "Invaild command: $1"
                exit 1
            fi
    esac
    cd "$original_dir"
}

shfunc_help() {
    cat <<EOS
- prj [project-name] ... Go to the project with project-name. If project-name is not specified, you will be redirected to a directory with many projects.
- clean_trash ... Permanently delete the directory for the Recycle Bin.
EOS
}

